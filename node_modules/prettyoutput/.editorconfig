# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# default rules
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.json]
# let automatically generated package.json be valid out of the box by setting the indent_size to 2
indent_size = 2
